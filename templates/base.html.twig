<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Bucket-List{% endblock %}</title>

    <link rel="icon" type="image/png" href="{{ asset('img/bucket.png') }}" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('styles/templateStyles.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/styles.css') }}">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
    <script src="{{ asset('js/scripts.js') }}"></script>

    {% block stylesheets %}{% endblock %}
    {% block javascripts %}{% endblock %}
</head>

<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container px-5">

        <a class="navbar-brand" href="{{ path('accueil') }}">
            <img src="{{ asset('img/bucket.png') }}" class="logo"/>
            Bucket-List
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            {% set route = app.request.attributes.get('_route')%}
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <li class="nav-item"><a class="nav-link {{ route == 'accueil' ? 'active' }}" aria-current="page" href="{{ path('accueil') }}">Accueil</a></li>
                <li class="nav-item"><a class="nav-link {{ route == 'wishList' ? 'active' }}" href="{{ path('wishList') }}">WishList</a></li>
                <li class="nav-item"><a class="nav-link {{ route == 'aboutUs' ? 'active' }}" href="{{ path('aboutUs') }}">A propos</a></li>
                <li class="nav-item"><a class="nav-link {{ route == 'contact' ? 'active' }}" href="{{ path('contact') }}">Contact</a></li>
            </ul>
        </div>

    </div>
</nav>

<div class="container px-4 px-lg-5 pb-5">
    {% block body %}{% endblock %}
</div>

<footer class="py-2 bg-dark fixed-bottom">
    <div class="container px-4 px-lg-5"><p class="m-0 text-center text-white">Copyright &copy;Bucket-List 2021</p></div>
</footer>

</body>
</html>
